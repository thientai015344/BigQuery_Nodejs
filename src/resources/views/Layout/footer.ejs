<script>
    function redirectToSearch() {
        // Lấy giá trị từ input
        var inputElement = document.querySelector('.form-control');
        var query = inputElement.value.trim();

        // Kiểm tra nếu input không rỗng
        if (query) {
            // Tạo URL với query
            var searchUrl = '/search?query=' + encodeURIComponent(query);

            // Chuyển hướng đến URL mới
            window.location.href = searchUrl;
        } else {
            // Có thể hiển thị thông báo nếu input rỗng (tuỳ chọn)
            alert("Please enter a keyword to search.");
        }
    }
    
    // Gắn sự kiện click vào button khi trang đã tải xong
    window.onload = function() {
        var searchButton = document.querySelector('.input-group-text');
        searchButton.addEventListener('click', redirectToSearch);
    }
</script>

